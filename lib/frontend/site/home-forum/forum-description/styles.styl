.container.forum-description
  font-weight: 300;
  margin-top: 30px

  li, ol {
    font-size: 16px
  }



  .col-md-12.text-center.button-container
    display: flex
    justify-content: center
    flex-wrap: wrap
    position: relative
    &.see-more:before
      content: ''
      width: 100%
      height: 100px
      background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%)
      position: absolute
      top: -100
    a
      margin-top: 10px
      cursor: pointer
