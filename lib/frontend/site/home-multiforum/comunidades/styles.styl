.intro-comunidades
  background-color $main-color
  color white
  padding 60px 0 120px
  .row div
    justify-content: space-between;
    flex-direction: row;
    display: flex;
    align-items: baseline
    @media (max-width: 500px)
      flex-direction: column;
  h2
    font-size 35px
    flex 1
    span
      font-size 45px
      display block
      color $main-link-color
  p
    font-size 16px
    flex 1
    text-align right
    line-height 1.3
#comunidades
  top: -120px;
  position: relative;
  padding-bottom: 0
.comunidades-carousel
  padding: 0 20px;
  button.flickity-prev-next-button
    &.previous
      left 0
      @media (min-width: 576px)
        left -70px
    &.next
      right 0
      @media (min-width: 576px)
        right -70px
.comunidad-col
  height: 235px
.comunidad-carousel-item
  text-align: center
  cursor: pointer
  display: block;
  // flex-direction: column;
  align-items: center;
  margin: 0 10px;
  padding: 30px;
  box-shadow: 0 2px 2px 0 rgba(98, 94, 94, 0.25);
  width: 230px
  height: 230px
  background-color: white
  h4
    font-family 'Staatliches', sans-serif
    text-transform: uppercase
    line-height: 1.2;
    font-size: 22px
    text-align: center
    flex: 1 0 auto;
    color: $main-color;
    margin: 20px 0 0;
  .icon-wrapper
    height: 100px;
    display: inline-block
    img
      width: 100px;
      height:100px;
      box-sizing: border-box;
.flickity-resize
  .comunidad-col
    // height: calc(100% - 40px)
