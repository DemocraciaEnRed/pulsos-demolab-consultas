.topics-hierarchy {
  .voted-box {
    .alert-voted {
      display: flex
      justify-content: center
      align-items: center
      
      .bold {
        font-weight: bold
      }
      .black {
        color: #000
      }
      .thanks {
        margin: 0 10px
      }
    }
  }

  .sortable-li, .voted-li, .result-voted-li {
    background-color: #fff;
    border-bottom: 1px solid #efefef;
    border-radius: 3px;
    user-select: none;
    height: 60px;
    text-align: center;
    line-height: 60px;
    cursor: row-resize;
  }

  .voted-li, .result-voted-li {
    cursor: not-allowed;
  }

  .position-hierarchy {
    height:60px;
    text-align:center;
    line-height: 60px;
    font-weight: bold;
  }

  ol {
    list-style-position: none;
    font-weight: bold;
    position: relative;
    z-index: 0;
    background-color: #f9f9f9;
    border: 1px solid #efefef;
    border-radius: 3px;
  }

  .btn-answer {
    padding-left: 0
    margin-bottom: 20px
  }

  .answer-ol {
    background-color: #FFF
    .answer-li {
      height: 60px
      line-height: 60px
      text-align: center
    }
  }
}

