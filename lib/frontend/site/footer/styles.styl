.ext-footer
  padding 60px 0 0
  margin-top 30px
  font-size 1em
  background-color #f5f5f5
  border-top: 1px solid rgba(0, 0, 0, 0.1)

  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start
    justify-content space-between
    &.container
      margin-bottom: 30px;

  .institutional
    flex-grow 0
    p
      max-width 560px
  a
    color $main-link-color
    font-weight 400
    &:hover
      color $main-link-color-hover
      text-decoration underline

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 30px
    margin-bottom 30px
    a
      padding-left 20px
      display inline-block
      &:first-of-type
        padding-right 20px
        padding-left 0
        border-right 1px solid black
        img
          height 80px
          @media (max-width: 500px)
            height: 60px

    img
      max-width 100%
      height 60px
      @media (max-width: 500px)
        height: 40px

  .menu
    padding 0 15px
    text-align right

    &:first-of-type
      flex-grow 3
      text-align left
      a
        color $main-color

    a
      display block
      padding 6px 0
      font-family 'Staatliches', cursive;
      font-size 16px
      color black

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      text-align: left
      a
        display block
        line-height 1em

    .institutional
      padding 0 15px
      flex-grow: 1;
  .footer-support
    background-color #e8e8e8
    text-align: center
    font-size: 16px
    padding 20px
    max-width: unset
    justify-content: center
    flex-direction: column;
    align-items: center;
    .logos-wrapper
      h6
        margin: 15px 0
      a
        display: inline-block
        margin: 0 7px;
        img 
          max-height: 100%
      .logo-corona
        height: 13px
      .logo-avina,
      .logo-nimd
        height: 25px
      .logo-fescol
        height: 60px
      .logo-extituto
        height: 40px
      .logo-ideemos
        height: 55px
      .logo-diseno
        height: 17px
        margin: 0 7px

  .footer-democracia
    min-height 50px
    background-color $main-color
    color: white
    max-width: unset
    justify-content: center
    align-items: center
    font-size 14px
    @media (max-width: 768px)
      justify-content: space-around;
    @media (max-width: 500px)
      flex-direction: row;
      padding-bottom: 20px
    a
      display: inline-block
      color: white
      position: absolute
      left: 10%
      font-size: 12px
      @media (max-width: 768px)
        position: relative
        left: auto
      @media (max-width: 500px)
        margin: 15px 0;
      img
        height: 30px
        display: inline-block
        padding: 0 10px
        vertical-align: top
      span
        display: inline-block
