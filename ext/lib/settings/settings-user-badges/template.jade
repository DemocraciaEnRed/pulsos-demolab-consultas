#user-badges-wrapper.hide(data-section=urlBuilder.for('settings.user-badges'))
  .password-settings
    .heading
      .circle
        i.icon-lock
      h1= t('settings.user-badges')
    div
      ul.form-messages
      .form-group.user-search
      .form-group
        .user-card
          .picture
          p.name
      .form-group
        label #{'Verificación'}
        label.help-text #{'La verificación de usuario permite saber qué usuarios tienen su identidad validada.'}
        label.user-is-verified
        button#submit-verify(tabindex=5)=t('settings.user-badges.verify')
      .form-group
        label #{t('settings.badge')}
        br
        label.help-text='La etiqueta se visualiza debajo del nombre del usuario al realizar comentarios.'
        input.form-control(type='text', name='badge', tabindex=2, placeholder=t(''), value='', validate='required', maxlength=50)
      .form-group
        button#submit-badge.btn.btn-success.btn-block.btn-lg(tabindex=4)=t('settings.user-badges.save-badge')
