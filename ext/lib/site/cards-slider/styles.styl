.topic-card
  cursor: pointer

.flickity-prev-next-button
  path.arrow 
    fill: $main-color
button.flickity-prev-next-button
  background: #e9e9e9
  width: 55px
  height: 55px
  &:hover
    background: #ccc
  &.previous
    left -45px
    @media (min-width: 576px)
      left -70px
  &.next
    right -45px
    @media (min-width: 576px)
      right -70px
  
@import './topic-card/styles'

